(section
  (ref "jack_port_short_name")
  (title "Jack.Port.Short_Name")
  (subsection
    (title "Synopsis")
    (para-verbatim procedure_synopsis
"with Jack.Port;

function Short_Name (Port : in Jack.Client.Port_t) return Jack.Client.Port_Name_t;
"))
  (subsection
    (title "Description")
    (para
      "The " (item ada_procedure "Short_Name") " procedure retrieves the
      short name of " (item variables "Port") ".")
  (subsection
    (title "Mapping")
    (para
      "The " (item ada_procedure "Short_Name") " procedure is equivalent to "
      (item c_function "jack_port_short_name") "."))))
